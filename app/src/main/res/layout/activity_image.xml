
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/activity_main" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <Button android:id="@+id/load_image_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:onClick="onButtonClicked" android:text="Load Image"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/origin_iv"
            android:layout_width="match_parent"
            android:layout_height="394dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1" />

    </LinearLayout>

    <ImageView
        android:id="@+id/edge_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1" />
</LinearLayout>